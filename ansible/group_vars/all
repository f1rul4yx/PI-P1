# Lista con diccionarios para indicar los datos de los virtualhost que se van a crear:
# nginx
virtualhosts:
  - name: guestbook
    datos:
      nameserver: guestbook.diego.org
      documentroot: /var/www/guestbook
      errorlog: error_guestbook
      accesslog: acceses_guestbook


# URL del repositorio
guestbook_repo_url: "https://github.com/josedom24/guestbook_php.git"


# Opcional: ruta base donde se alojarán los DocumentRoot
base_web_path: "/var/www/guestbook"


# Variables de conexión a MariaDB para la aplicación guestbook
guestbook_db_host: "mariadb.diego.org"
guestbook_db_user: "admin"
guestbook_db_password: "clave12345"
guestbook_db_name: "guestbook"
